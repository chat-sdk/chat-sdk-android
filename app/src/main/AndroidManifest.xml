                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        <!--</activity>-->

        <meta-data android:name="twitter_key" android:value="@string/twitter_key" />
        <meta-data android:name="twitter_secret" android:value="@string/twitter_secret" />
        <meta-data android:name="com.google.android.geo.API_KEY" android:value="@string/google_maps_api_key"/>
        <meta-data android:name="google_web_client_id" android:value="@string/google_web_client_id" />

        <!--Contact Book-->
        <meta-data android:name="contact_book_invite_contact_email_subject" android:value="@string/contact_book_email_subject" />
        <meta-data android:name="contact_book_invite_contact_email_body" android:value="@string/contact_book_email_body" />
        <meta-data android:name="contact_book_invite_contact_sms_body" android:value="@string/contact_book_sms_body" />
